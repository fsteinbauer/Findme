<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    
    <!-- the theme applied to the application or activity -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/DefaultActionBar</item>
        <item name="actionBarStyle">@style/DefaultActionBar</item>
        
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        
    </style>

    <!-- ActionBar styles -->
    <style name="DefaultActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
       
        <item name="background">@color/medium_green</item>
        <item name="android:background">@color/medium_green</item>
        
    <!--    <item name="android:titleTextStyle">@style/DefaultActionBarTitleText</item>
        <item name="titleTextStyle">@style/DefaultActionBarTitleText</item> -->
    </style>
    
<!--    <style name="DefaultActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style> -->
    
    <style name="DefaultDialog" parent="@android:style/Theme.Holo.Light.Dialog">
  		<item name="android:windowTitleStyle">@style/DefaultDialogTitle</item>
  		<item name="android:textColor">@color/light_green</item>
  		<item name="android:divider">@color/light_green</item>
	</style>
	
    
    <style name="DefaultDialogTitle" parent="@android:Widget.TextView">
		 <item name="android:background">@color/medium_green</item>
		 <item name="android:divider">@color/light_green</item>
    </style>
    
  
    <style name="SpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/TextAppearanceSpinnerItem</item>
    </style>

    <style name="TextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/dark_green</item>
    </style>
    
    
    


</resources>
